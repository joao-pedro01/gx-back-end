  "paths": {
    "/usuarios": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Recupera todos os usuários cadastrados do sistema",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "senha": {
                        "type": "string"
                      },
                      "criado": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "alterado": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "is_active": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/usuarios/cadastro": {
      "post": {
        "description": "Cadastra usuario",
        "summary": "Recupera todos os usuários cadastrados do sistema",
        "tags": [
          "Usuários"
        ],
        "requestBody": {
          "description": "Dados do usuário a ser cadastrado",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "description": "Nome do usuário",
                    "example": "t_jopedro"
                  },
                  "senha": {
                    "type": "string",
                    "description": "Senha do usuário",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario cadastrado com sucesso",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "boolean",
                      "description": "Booleano indicando se a requisição foi bem sucedida ou não",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem explicando o resultado da requisição",
                      "example": "Usuário cadastrado com sucesso"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "falha ao cadastrar usuario",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "boolean",
                      "description": "Booleano indicando se a requisição foi bem sucedida ou não",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem explicando o resultado da requisição",
                      "example": "falha ao cadastrar usuario"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },    
    "/usuarios/entrar": {
      "post": {
        "description": "Realiza o login",
        "summary": "Recupera os dados do usuário cadastrado no sistema",
        "tags": [
          "Usuários"
        ],
        "requestBody": {
          "description": "Dados de login do usuário",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": {
                    "type": "string",
                    "description": "Nome do usuário",
                    "example": "t_jopedro"
                  },
                  "senha": {
                    "type": "string",
                    "description": "Senha do usuário",
                    "example": "123456"
                  }
                },
                "required": ["usuario", "senha"]
              }
            }
          }
        },    
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "boolean",
                      "description": "Booleano indicando se a requisição foi bem sucedida ou não",
                      "example": false
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem explicando o resultado da requisição",
                      "example": "Usuário cadastrado com sucesso"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário ou a senha incorreta!",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "boolean",
                      "description": "Booleano indicando se a requisição foi bem sucedida ou não",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem explicando o resultado da requisição",
                      "example": "Usuário ou a senha incorreta!"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "falha ao cadastrar usuario",
            "content": {
              "aplicattion/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "boolean",
                      "description": "Booleano indicando se a requisição foi bem sucedida ou não",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensagem explicando o resultado da requisição",
                      "example": "falha ao cadastrar usuario"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "TokenHeader": []
          }
        ]
      }
    },
    "/usuarios/logout": {
