            "name": "id",
            "in": "path",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ]
      },
      "delete": {
        "tags": [
          "pecas"
        ],
        "summary": "Delete uma peça pelo id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "apllication/json": {
                "example": "Deu certo"
              }
            }
          },
          "405": {
            "description": "Method Not Allowed",
            "content": {
              "apllication/json": {
                "example": "Peça já esta desativada"
              }
            }
          }
        }
      }
    },
    "/equipamentos": {
      "get": {
        "tags": [
