    "/categorias": {
      "get": {
        "tags": [
          "Categorias"
        ],
        "summary": "Recupera todas as categorias solicitada",
        
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "nome": {
                        "type": "string"
                      },
