    "/pecas/{id}": {
      "get": {
        "tags": [
          "pecas"
        ],
        "summary": "Recupera uma peça especifica pelo id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "apllication/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "sku": {
                        "type": "string"
                      },
                      "is_active": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "pecas"
        ],
        "summary": "Adiociona peça ao banco de dados",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ]
      },
      "put": {
        "tags": [
          "pecas"
        ],
        "summary": "Altera quantidade de peça",
        "parameters": [
